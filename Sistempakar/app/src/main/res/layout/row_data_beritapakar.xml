<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.justino.sistempakar.MenuBerita.TampilDataBeritaPakar">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/black">
        <LinearLayout
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBerita"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginRight="10dp"
                />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:gravity="left"
                    android:textStyle="bold"
                    android:id="@+id/namaBerita"
                    android:layout_marginTop="60dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="left"
                    android:layout_height="40dp"
                    android:textColor="@color/kuning"
                    android:textSize="20dp" />

                <TextView
                    android:gravity="center"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_gravity="left"
                    android:id="@+id/penerbit"
                    android:layout_height="30dp"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="60dp"
                    android:id="@+id/tanggal"
                    android:layout_height="30dp"
                    android:textColor="@color/kuning"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/expandableLayout" >

            <TextView
                android:id="@+id/detailberita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:text="Detail Berita"
                android:textColor="@color/kuning"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detBerita"
                android:layout_width="match_parent"
                android:textAlignment="textStart"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailberita"
                android:textColor="@color/kuning"
                android:textSize="20dp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>