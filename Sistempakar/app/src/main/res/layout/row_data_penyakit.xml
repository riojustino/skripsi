<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.justino.sistempakar.MenuPenyakit.TampilDataPenyakit">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/gejala">
        <LinearLayout
            android:id="@+id/test"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgProduk"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="10dp"
                 />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/namaPenyakit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/expandableLayout" >

                <TextView
                    android:id="@+id/detailpenyakit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="160dp"
                    android:text="Detail Penyakit"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detPenyakit"
                        android:layout_width="match_parent"
                        android:textAlignment="textStart"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/detailpenyakit"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                <TextView
                    android:text="Saran Penyakit"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/shadow"
                    android:id="@+id/saranpenyakit"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_below="@id/detPenyakit"
                    android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/srnPenyakit"
                        android:layout_below="@id/saranpenyakit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/shadow"
                        android:textSize="20dp" />
            </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>