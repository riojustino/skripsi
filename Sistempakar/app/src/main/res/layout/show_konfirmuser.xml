<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context="com.justino.sistempakar.DetailRegister">
        <Button
            android:id="@+id/backuserdetail"
            android:padding="5dp"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:drawableTint="@color/white"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:drawableLeft="@drawable/ic_back"
            android:text="Kembali"
            android:textSize="12dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Detail Pengguna"
            android:textColor="@color/button"
            android:textSize="35dp"
            android:gravity="center"
            android:textStyle="bold"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_profile"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/button"
                android:textStyle="bold"
                android:text="Nama"
                android:gravity="left"
                android:textSize="15dp"
                android:layout_weight="3"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/txtNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Nama Pengguna"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/button"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/button"
                android:textStyle="bold"
                android:text="Jabatan"
                android:gravity="left"
                android:textSize="15dp"
                android:layout_weight="3"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/txtJabatanuser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:text="Jabatan"
                android:gravity="center"
                android:textColor="@color/button"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/button"
                android:textStyle="bold"
                android:text="No Telp"
                android:gravity="left"
                android:textSize="15dp"
                android:layout_weight="3"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/txtNohpuser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:text="Nomor Telepon"
                android:gravity="center"
                android:textColor="@color/button"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/button"
                android:textStyle="bold"
                android:text="Email"
                android:gravity="left"
                android:textSize="15dp"
                android:layout_weight="3"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/txtEmailuser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:text="Email"
                android:textColor="@color/button"
                android:textColorHighlight="@color/button"
                android:textColorHint="@color/background"
                android:textColorLink="@color/button"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
        <Button
            android:id="@+id/btnKonfirm"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/black"
            android:text="Konfirmasi"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btnHapus"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:textStyle="bold"
            android:backgroundTint="@color/black"
            android:text="Batalkan"
            android:textColor="@color/white"/>

    </LinearLayout>
</ScrollView>